<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentnavigation.xml"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.shopping.shoppingapp.Authentication.AuthFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

        <action
            android:id="@+id/action_authFragment_to_displayShopsFragment"
            app:destination="@id/displayShopsFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayShopsFragment"
        android:name="com.shopping.shoppingapp.displayshops.DisplayShopsFragment"
        android:label="DisplayShopsFragment" />
</navigation>